@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}
@using (Html.BeginForm())
{
<ul>
  @for(int i = 0; i < Model.Count; i++)
  {

    <li>
        @Html.HiddenFor(x => x[i].ItemId)
        @Html.HiddenFor(x => x[i].Description)
        @Html.CheckBoxFor(x => x[i].Completed)
        @Html.ActionLink($"{Model[i].Description}", "Details", new { id = Model[i].ItemId })
    </li>
  }
</ul>

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>